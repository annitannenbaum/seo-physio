---
const { first, last } = Astro.props;
---
<div class="seo-name__container">
    <h1 class="seo-name__first">{first}</h1>
    <div class="seo-name__divider"></div>
    <h1 class="seo-name__last animated left">{last}</h1>
</div>
<style lang="scss">
    .seo-name {

        &__container {
            position: relative;
            display: flex;
            flex-direction: column;
            width: max-content;
            margin-bottom: 2.5rem;
            
        }

        &__first {
            color: var(--primary-red);
            margin-bottom: 0;
        }

        &__divider {
            border-bottom: 8px solid var(--primary-dark);
            width: 100%;
        }

        &__last {
            color: var(--primary-dark);
            margin-left: max(3rem, 10vw);
            margin-bottom: 0;

        }
    }
</style>